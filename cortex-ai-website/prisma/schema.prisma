generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model Tool {
  id          Int     @id @default(autoincrement())
  name        String
  category    String
  description String
  rating      Int
  downloads   Int
  imageLink   String?
}

model Category {
  id          Int     @id @default(autoincrement())
  name        String
}
