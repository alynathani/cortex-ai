generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model Tool {
  id          Int     @id @default(autoincrement())
  name        String
  category    Category  @relation(fields: [categoryName], references: [name])
  categoryName  String
  description String
  keyFeatures String?
  useCases String?
  guide String?
  rating      Int?
  externalLink  String?
  downloads   Int?
  imageLink   String?
  videoLink String?
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
  description String
  tools Tool[]
}
